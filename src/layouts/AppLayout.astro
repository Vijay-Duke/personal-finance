---
import '@/styles/globals.css';
import { Sidebar } from '@/components/layout/Sidebar';
import { AIChatButton } from '@/components/ai/AIChatButton';
import { NotificationBell } from '@/components/notifications/NotificationBell';
import { OfflineIndicator } from '@/components/ui';
import { getSession } from '@/lib/auth/session';

interface Props {
  title: string;
}

const { title } = Astro.props;
const session = await getSession(Astro);

// Redirect to login if not authenticated
if (!session) {
  return Astro.redirect('/auth/login');
}

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Personal Finance - Track your wealth" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/icons/icon-192x192.png" />
    <link rel="apple-touch-icon" href="/icons/icon-192x192.png" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#0f172a" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="Finance" />
    <title>{title} | Personal Finance</title>
  </head>
  <body class="bg-content-bg">
    <!-- Sidebar -->
    <Sidebar
      client:load
      currentPath={currentPath}
      user={{
        name: session.user.name,
        email: session.user.email,
        image: session.user.image,
      }}
    />

    <!-- Main Content -->
    <main class="min-h-screen md:ml-60">
      <!-- Header -->
      <header class="sticky top-0 z-30 flex h-16 items-center justify-between border-b border-border bg-card-bg px-4 md:px-6 pt-14 md:pt-0">
        <h1 class="text-lg md:text-xl font-semibold text-text-primary pl-12 md:pl-0">{title}</h1>
        <div class="flex items-center gap-4">
          <!-- Notification Bell -->
          <NotificationBell client:load />

          <!-- AI Chat Button -->
          <AIChatButton client:load />
        </div>
      </header>

      <!-- Page Content -->
      <div class="p-4 md:p-6">
        <slot />
      </div>
    </main>

    <!-- Offline Indicator -->
    <OfflineIndicator client:load />
  </body>
</html>
