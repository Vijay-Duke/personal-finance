---
import AppLayout from '../../layouts/AppLayout.astro';
import { StocksPage } from '../../components/pages';
import { getSession } from '@/lib/auth/session';

const session = await getSession(Astro);

// Redirect to login if not authenticated
if (!session) {
  return Astro.redirect('/auth/login');
}
---

<AppLayout title="Stock Holdings">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-text-primary">Stock Holdings</h1>
      <p class="text-text-muted">
        Track your stock investments and portfolio performance.
      </p>
    </div>

    <StocksPage client:only="react" />
  </div>
</AppLayout>
