---
import AppLayout from '../../layouts/AppLayout.astro';
import { StocksList } from '../../components/accounts/StocksList';
import { QueryProvider } from '../../components/providers/QueryProvider';
---

<AppLayout title="Stock Holdings">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold">Stock Holdings</h1>
      <p class="text-muted-foreground">
        Track your stock investments and portfolio performance.
      </p>
    </div>

    <QueryProvider client:only="react">
      <StocksList />
    </QueryProvider>
  </div>
</AppLayout>
