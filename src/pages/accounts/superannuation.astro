---
import AppLayout from '../../layouts/AppLayout.astro';
import { SuperannuationPage } from '../../components/pages';
import { getSession } from '@/lib/auth/session';

const session = await getSession(Astro);

// Redirect to login if not authenticated
if (!session) {
  return Astro.redirect('/auth/login');
}
---

<AppLayout title="Superannuation">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-text-primary">Superannuation & Retirement</h1>
      <p class="text-text-muted">
        Track your retirement savings, 401(k), IRA, and pension accounts.
      </p>
    </div>

    <SuperannuationPage client:only="react" />
  </div>
</AppLayout>
