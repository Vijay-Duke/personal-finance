---
import AppLayout from '../../layouts/AppLayout.astro';
import { RealEstateList } from '../../components/accounts/RealEstateList';
import { QueryProvider } from '../../components/providers/QueryProvider';
---

<AppLayout title="Real Estate">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold">Real Estate</h1>
      <p class="text-muted-foreground">
        Track your properties, equity, and rental income.
      </p>
    </div>

    <QueryProvider client:load>
      <RealEstateList client:load />
    </QueryProvider>
  </div>
</AppLayout>
