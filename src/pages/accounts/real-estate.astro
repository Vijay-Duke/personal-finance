---
import AppLayout from '../../layouts/AppLayout.astro';
import { RealEstatePage } from '../../components/pages';
import { getSession } from '@/lib/auth/session';

const session = await getSession(Astro);

// Redirect to login if not authenticated
if (!session) {
  return Astro.redirect('/auth/login');
}
---

<AppLayout title="Real Estate">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-text-primary">Real Estate</h1>
      <p class="text-text-muted">
        Track your properties, equity, and rental income.
      </p>
    </div>

    <RealEstatePage client:only="react" />
  </div>
</AppLayout>
