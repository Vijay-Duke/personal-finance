---
import AppLayout from '../../layouts/AppLayout.astro';
import { CryptoList } from '../../components/accounts/CryptoList';
import { QueryProvider } from '../../components/providers/QueryProvider';
---

<AppLayout title="Crypto Holdings">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold">Crypto Holdings</h1>
      <p class="text-muted-foreground">
        Track your cryptocurrency investments across exchanges and wallets.
      </p>
    </div>

    <QueryProvider client:load>
      <CryptoList client:load />
    </QueryProvider>
  </div>
</AppLayout>
