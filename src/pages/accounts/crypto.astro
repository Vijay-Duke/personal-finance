---
import AppLayout from '../../layouts/AppLayout.astro';
import { CryptoPage } from '../../components/pages';
import { getSession } from '@/lib/auth/session';

const session = await getSession(Astro);

// Redirect to login if not authenticated
if (!session) {
  return Astro.redirect('/auth/login');
}
---

<AppLayout title="Crypto Holdings">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-text-primary">Crypto Holdings</h1>
      <p class="text-text-muted">
        Track your cryptocurrency investments across exchanges and wallets.
      </p>
    </div>

    <CryptoPage client:only="react" />
  </div>
</AppLayout>
