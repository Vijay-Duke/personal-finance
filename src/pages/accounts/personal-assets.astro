---
import AppLayout from '../../layouts/AppLayout.astro';
import { PersonalAssetsPage } from '../../components/pages';
import { getSession } from '@/lib/auth/session';

const session = await getSession(Astro);

// Redirect to login if not authenticated
if (!session) {
  return Astro.redirect('/auth/login');
}
---

<AppLayout title="Personal Assets">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-text-primary">Personal Assets</h1>
      <p class="text-text-muted">
        Track vehicles, jewelry, art, collectibles, and other valuables.
      </p>
    </div>

    <PersonalAssetsPage client:only="react" />
  </div>
</AppLayout>
