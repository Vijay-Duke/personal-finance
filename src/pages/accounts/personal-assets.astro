---
import AppLayout from '../../layouts/AppLayout.astro';
import { PersonalAssetsList } from '../../components/accounts/PersonalAssetsList';
import { QueryProvider } from '../../components/providers/QueryProvider';
---

<AppLayout title="Personal Assets">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold">Personal Assets</h1>
      <p class="text-muted-foreground">
        Track vehicles, jewelry, art, collectibles, and other valuables.
      </p>
    </div>

    <QueryProvider client:load>
      <PersonalAssetsList client:load />
    </QueryProvider>
  </div>
</AppLayout>
