---
import AppLayout from '../../layouts/AppLayout.astro';
import { BankAccountsList } from '../../components/accounts/BankAccountsList';
import { QueryProvider } from '../../components/providers/QueryProvider';
---

<AppLayout title="Bank Accounts">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold">Bank Accounts</h1>
      <p class="text-muted-foreground">
        Manage your checking, savings, and other bank accounts.
      </p>
    </div>

    <QueryProvider client:load>
      <BankAccountsList client:load />
    </QueryProvider>
  </div>
</AppLayout>
