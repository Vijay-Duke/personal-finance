---
import AppLayout from '../../layouts/AppLayout.astro';
import { BankAccountsPage } from '../../components/pages';
import { getSession } from '@/lib/auth/session';

const session = await getSession(Astro);

// Redirect to login if not authenticated
if (!session) {
  return Astro.redirect('/auth/login');
}
---

<AppLayout title="Bank Accounts">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-text-primary">Bank Accounts</h1>
      <p class="text-text-muted">
        Manage your checking, savings, and other bank accounts.
      </p>
    </div>

    <BankAccountsPage client:only="react" />
  </div>
</AppLayout>
