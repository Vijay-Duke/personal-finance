---
import AppLayout from '../../layouts/AppLayout.astro';
import { DebtsPage } from '../../components/pages';
import { getSession } from '@/lib/auth/session';

const session = await getSession(Astro);

// Redirect to login if not authenticated
if (!session) {
  return Astro.redirect('/auth/login');
}
---

<AppLayout title="Debts & Liabilities">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-text-primary">Debts & Liabilities</h1>
      <p class="text-text-muted">
        Track mortgages, loans, credit cards, and other debts.
      </p>
    </div>

    <DebtsPage client:only="react" />
  </div>
</AppLayout>
