---
import AppLayout from '../../layouts/AppLayout.astro';
import { BusinessAssetsPage } from '../../components/pages';
import { getSession } from '@/lib/auth/session';

const session = await getSession(Astro);

// Redirect to login if not authenticated
if (!session) {
  return Astro.redirect('/auth/login');
}
---

<AppLayout title="Business Assets">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-text-primary">Business Assets</h1>
      <p class="text-text-muted">
        Track business ownership, partnerships, equity stakes, and investments.
      </p>
    </div>

    <BusinessAssetsPage client:only="react" />
  </div>
</AppLayout>
