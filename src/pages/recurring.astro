---
import AppLayout from '../layouts/AppLayout.astro';
import { RecurringPage } from '../components/pages';
import { getSession } from '@/lib/auth/session';

const session = await getSession(Astro);

// Redirect to login if not authenticated
if (!session) {
  return Astro.redirect('/auth/login');
}
---

<AppLayout title="Recurring Transactions">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-text-primary">Recurring Transactions</h1>
      <p class="text-text-muted">
        Manage subscriptions, bills, and scheduled transactions.
      </p>
    </div>

    <RecurringPage client:only="react" />
  </div>
</AppLayout>
