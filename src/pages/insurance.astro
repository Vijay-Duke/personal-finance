---
import AppLayout from '../layouts/AppLayout.astro';
import { InsurancePage } from '../components/pages';
import { getSession } from '@/lib/auth/session';

const session = await getSession(Astro);

// Redirect to login if not authenticated
if (!session) {
  return Astro.redirect('/auth/login');
}
---

<AppLayout title="Insurance">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-text-primary">Insurance</h1>
      <p class="text-text-muted">
        Track all your insurance policies and coverage.
      </p>
    </div>

    <InsurancePage client:only="react" />
  </div>
</AppLayout>
