---
import AppLayout from '../layouts/AppLayout.astro';
import { CashflowPage } from '../components/pages';
import { getSession } from '@/lib/auth/session';

const session = await getSession(Astro);

// Redirect to login if not authenticated
if (!session) {
  return Astro.redirect('/auth/login');
}
---

<AppLayout title="Cashflow">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-text-primary">Cashflow</h1>
      <p class="text-text-muted">
        Track your income, expenses, and transfers across all accounts.
      </p>
    </div>

    <CashflowPage client:only="react" />
  </div>
</AppLayout>
