---
import AppLayout from '../layouts/AppLayout.astro';
import { AccountSettings } from '../components/profile/AccountSettings';
import { FinancialProfileSettings } from '../components/profile/FinancialProfileSettings';
import { QueryProvider } from '../components/providers/QueryProvider';
---

<AppLayout title="Profile">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold">Profile</h1>
      <p class="text-muted-foreground">
        Manage your account settings and financial profile.
      </p>
    </div>

    <QueryProvider client:load>
      <div class="space-y-6">
        <AccountSettings client:load />
        <FinancialProfileSettings client:load />
      </div>
    </QueryProvider>
  </div>
</AppLayout>
